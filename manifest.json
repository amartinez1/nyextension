{
  "manifest_version": 2,

  "name": "New York Times Extension",
  "description": "This extension shows New York Times top stories",
  "version": "1.0.0",

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  
  "browser_action": {
    "default_icon": "nylogo.png",
    "default_popup": "popup.html",
    "default_title": "NY Times News"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}